@model MovieGenreViewModel
@{
    ViewData["Title"] = "Index Movies";
}

<h1>Movies</h1>
<p>
<a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="SelectedGenre" asp-items="new SelectList(Model.GenreList)">
            <option value="">All</option>
        </select>
        Title:
        <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.MovieList![0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.MovieList![0].ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.MovieList![0].Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.MovieList![0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.MovieList![0].Rating)
        </th>
        <th>
        </th>
    </tr>
    
    @foreach(var movie in Model.MovieList!){
        <tr>
            <td>
                @Html.DisplayFor(model=>movie.Title)
            </td>
            <td>
                @Html.DisplayFor(model=>movie.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(model=>movie.Genre)
            </td>
            <td>
                @Html.DisplayFor(model=>movie.Price)
            </td>
            <td>
                @Html.DisplayFor(model=>movie.Rating)
            </td>
            <td>
                @Html.ActionLink("Edit","Edit",new {id=movie.Id}) |
                <a asp-action="Details" asp-route-id="@movie.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
            </td>
            
        </tr>
    }
</table>